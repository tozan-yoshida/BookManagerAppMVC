@model BookManagerAppMVC.Models.LoginForm;

@{
    ViewData["Title"] = "Home Page";
    Layout = "_LoginLayout";
}


<p class="g-md-5"></p>

<div class="container">
    <div class="mb-3">
        <p class="fsize">社内図書管理アプリ</p>
    </div>
    <form asp-action="Index">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label>
            <input asp-for="UserName" class="form-control login" placeholder="ログインID" />
            <span asp-validation-for="UserName" class="text-danger"></span>
            </label>
        </div>
        <div class="form-group mb-3">
            <label>
            <input asp-for="Password" class="form-control login" placeholder="パスワード" type="password"/>
            <span asp-validation-for="Password" class="text-danger"></span>
            </label>
        </div>
        <div class="form-group mb-3">
            <input type="submit" value="ログイン" class="btn btn-primary" />
        </div>
    </form>
</div>
