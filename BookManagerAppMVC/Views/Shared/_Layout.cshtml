<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookManagerAppMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookManagerAppMVC.styles.css" asp-append-version="true" />
</head>
<body>

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-imagecolor sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <div class="sidebar-brand d-flex align-items-center justify-content-center" style="cursor:pointer"
             title="Home" onclick="location.href='@Url.Action("Index", "Top")'; return false; ">
            <div class="sidebar-brand-icon rotate-n-15">
                <img class="effect_img" src="~/images/icon_app.png" style="width: 40px" />
            </div>
            <div class="sidebar-brand-text mx-3">
                出荷管理アプリ
            </div>
        </div>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Nav Item - 出荷計画 -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#shipping-plan"
               aria-expanded="true" aria-controls="shipping-plan">
                <i class="fa-solid fa-calendar-days"></i>
                <span>出荷計画</span>
            </a>
            <div id="shipping-plan" class="collapse" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">

                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="ShippingPlanImport" asp-action="Index">
                        出荷計画取込
                    </a>

                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="ShippingPlanImportInquiry" asp-action="Index">
                        出荷計画取込照会
                    </a>

                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="ShippingPlanExport" asp-action="Index">
                        出荷計画出力
                    </a>

                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="ShippingPlanInquiryByProductNumber" asp-action="Index">
                        出荷計画品番別照会
                    </a>
                </div>
            </div>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Nav Item - 作業管理 -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#work-management"
               aria-expanded="true" aria-controls="work-management">
                <i class="fa-solid fa-trophy"></i>
                <span>作業管理</span>
            </a>
            <div id="work-management" class="collapse" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="ShippingRecordInquiry"
                       asp-action="Index">出荷実績照会</a>
                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="PalletRecordInquiry"
                       asp-action="Index">パレット実績照会</a>
                </div>
            </div>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Nav Item - マスター情報 -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#master-info"
               aria-expanded="true" aria-controls="master-info">
                <i class="fa-solid fa-wrench"></i>
                <span>マスター情報</span>
            </a>
            <div id="master-info" class="collapse" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="MUsers" asp-action="Index">
                        ユーザーマスター
                    </a>
                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="MShippingLanes" asp-action="Index">
                        出荷レーンマスター
                    </a>
                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="MRoutes" asp-action="Index">
                        運行便マスター
                    </a>
                    <a class="collapse-item collapse-item-imagecolor" asp-area="" asp-controller="MCustomers" asp-action="Index">
                        得意先マスター
                    </a>
                </div>
            </div>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider d-none d-md-block">

        <!-- Sidebar Toggler (Sidebar) -->
        <div class="text-center d-none d-md-inline">
            <button class="rounded-circle border-0" id="sidebarToggle"></button>
        </div>

    </ul>
    <!-- End of Sidebar -->


    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BookManagerAppMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            @Context.User.Identity.Name
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookManagerAppMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

<!--jQuery（動的）のバリデーション↓-->
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
<!--jQuery（動的）のバリデーション↑-->
<!-- Bootstrap core JavaScript-->
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
</html>
